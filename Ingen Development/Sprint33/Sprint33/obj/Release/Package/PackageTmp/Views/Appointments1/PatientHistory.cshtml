@model IEnumerable<Sprint33.Models.Appointment>

@{
    ViewBag.Title = "Patient Records";
}

<h2>Patient Records</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </th>
 
        <th>
            @Html.DisplayNameFor(model => model.symtoms)
        </th>
        <th>
            Perscription
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.CheckedIn == true)
    {
        if (item.PatientName == Session["UserName"].ToString())
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.symtoms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.diagnosis)
                </td>

            </tr>

        }
    }
    
}

</table>
@Html.ActionLink("Return Home","Homepage","Patients1")    
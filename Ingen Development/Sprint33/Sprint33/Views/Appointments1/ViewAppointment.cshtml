@model IEnumerable<Sprint33.Models.Appointment>

@{
    ViewBag.Title = Session["UserName"].ToString() + "'s Currectly Booked Appointments";
}

<h2>View Appointment</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.PatientName == Session["UserName"].ToString() && item.CheckedIn == false)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentTime)
                </td>
                <td>
                    @Html.ActionLink("Cancel", "PatientCancel", new { id = item.AppointmentID })
                </td>
            </tr>
        }

    }

</table>

@Html.ActionLink("Back to Home", "Homepage", "Patients1")
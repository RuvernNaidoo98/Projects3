@model IEnumerable<Sprint33.Models.Appointment>

@{
    ViewBag.Title = "Doctors Appointments";
}

<h2>Doctors Current Appointments</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.PatientName != null && item.CheckedIn == false)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentTime)
                </td>
                <td>
                    @Html.ActionLink("Edit", "AdminEdit", new { id = item.AppointmentID }) |
                    @Html.ActionLink("Details", "AdminDetails", new { id = item.AppointmentID }) |
                    @Html.ActionLink("Cancel", "AdminCancel", new { id = item.AppointmentID })

                </td>
            </tr>
        }

    }

</table>
@Html.ActionLink("Return to Home", "Homepage", "Admins1")
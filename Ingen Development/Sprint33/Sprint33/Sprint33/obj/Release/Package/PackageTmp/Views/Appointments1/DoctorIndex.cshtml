@model IEnumerable<Sprint33.Models.Appointment>

@{
    ViewBag.Title = "DoctorIndex";
}

<h2>Doctors Appointments</h2>

<p>
    @Html.ActionLink("Create Appointments Slots", "CreateSlot", "Appointments")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Confirmed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.PatientName != null && item.CheckedIn == false)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Confirmed)
                </td>
                <td>
                    @Html.ActionLink("Edit", "DoctorEdit", new { id = item.AppointmentID }) |
                    @Html.ActionLink("Details", "DoctorDetails", new { id = item.AppointmentID }) |
                    @Html.ActionLink("Cancel", "DoctorCancel", new { id = item.AppointmentID })
                    @*@Html.ActionLink("Remove Slot", "DoctorDelete", new { id = item.AppointmentID })*@

                </td>
            </tr>
        }
    }

</table>
@Html.ActionLink("Return Home", "Homepage", "Doctors1")